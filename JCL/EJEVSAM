//*          EJEMPLO             *
//* IDCAMS ALOCAR VSAM KSDS Y AIX*
//********************************
//********************************
//*          EJEMPLO             *
//*   IDCAMS DELETE CLUSTER      *
//********************************
//DELCLUS  EXEC PGM=IDCAMS,COND=(8,LT)
//SYSPRINT DD SYSOUT=*
//SYSIN    DD *
     DELETE   KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM CLUSTER PURGE
     DELETE   KC03C7C.ARCHIVOS.CLIENTE.CL
//*
//********************************
//*       EJEMPLO KSDS           *
//*   IDCAMS DEFINE CLUSTER      *
//********************************
//DEFKSDS  EXEC PGM=IDCAMS,COND=(8,LT)
//SYSPRINT DD SYSOUT=*
//SYSIN    DD *
  DEFINE CLUSTER(NAME(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM) -
         CONTROLINTERVALSIZE(4096) -
         VOLUMES(KCTR57) -
         CYL(1 1) -
         KEYS(13 0) -
         RECORDSIZE(50 50) -
         FREESPACE(10 5) -
         SHR(2 3)) -
  DATA   (NAME(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.DATA)) -
  INDEX  (NAME(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.INDX))
//*
//*********************************
//* EJEMPLO1 CLASIFICA CLIENTE    *
//*********************************
//SORT1       EXEC PGM=SORT,COND=EVEN
//SYSOUT    DD SYSOUT=*
//SORTIN    DD DSN=KC03C7C.ARCHIVOS.CLIENTE,DISP=SHR
//SORTOUT   DD DSN=KC03C7C.ARCHIVOS.CLIENTE.CL,
//            DCB=(LRECL=50,BLKSIZE=0,RECFM=FB),
//            SPACE=(TRK,(1,1),RLSE),DISP=(,CATLG)
//SYSIN     DD *
 SORT FORMAT=BI,FIELDS=(1,13,A)
//*
//********************************
//*        EJEMPLO REPRO         *
//* IDCAMS PARA CARGAR KSDS VSAM *
//* CLIENTE = SALIDA PROGRAMA    *
//* CLASE SINCRï¿½NICA 18.1        *
//********************************
//DEFREPRO EXEC PGM=IDCAMS,REGION=0M
//CLIENTE  DD DSN=KC03C7C.ARCHIVOS.CLIENTE.CL,DISP=SHR
//SALIDA   DD DSN=KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM,DISP=SHR
//SYSPRINT DD SYSOUT=*
//SYSIN    DD *
  REPRO INFILE(CLIENTE) OUTFILE(SALIDA) REPLACE
//*
//*
//********************************
//*       EJEMPLO KSDS           *
//* IDCAMS DEFINE AIX POR CLI    *
//********************************
//DEFAIX   EXEC PGM=IDCAMS
//SYSPRINT DD SYSOUT=*
//SYSIN    DD *
  DEFINE AIX (NAME(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.AIX) -
         RELATE(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM) -
         KEYS(3 17) -
         VOLUMES(KCTR57) -
         FREESPACE(5 1) -
         CYL(1 1) -
         RECORDSIZE(50 50) -
         CONTROLINTERVALSIZE(2048) -
         NONUNIQUEKEY -
         SHR(2 3)) -
  DATA  (NAME(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.AIX.DATA)) -
  INDEX (NAME(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.AIX.INDX))
//********************************
//*       EJEMPLO KSDS           *
//* IDCAMS DEFINE PATH BLDINDEX  *
//********************************
//DEFPATH  EXEC PGM=IDCAMS
//SYSPRINT DD SYSOUT=*
//SYSIN    DD *
  DEFINE PATH (NAME(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.PATH) -
         PATHENTRY(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.AIX))
  BLDINDEX -
         IDS(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM) -
         ODS(KC03C7C.ARCHIVOS.CLIENTE.KSDS.VSAM.AIX) -
         ESORT
