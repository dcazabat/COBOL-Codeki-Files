//DEFREPRO EXEC PGM=IDCAMS,REGION=0M
//NOVECLI  DD DSN=KC03XXX.NOVECLI.CL,DISP=SHR
//SALIDA   DD DSN=KC03XXX.NOVECLI.KSDS.VSAM,DISP=SHR
//SYSPRINT DD SYSOUT=*
//SYSIN    DD *
  REPRO INFILE(NOVECLI) OUTFILE(SALIDA) REPLACE
