  DEFINE CLUSTER(NAME(KC03XXX.NOVECLI.KSDS.VSAM) -
         CONTROLINTERVALSIZE(4096) -
         VOLUMES(KCTR57) -
         CYL(1 1) -
         KEYS(17 0) -
         RECORDSIZE(244 244) -
         FREESPACE(10 5) -
         SHR(2 3)) -
  DATA   (NAME(KC03XXX.NOVECLI.KSDS.VSAM.DATA)) -
  INDEX  (NAME(KC03XXX.NOVECLI.KSDS.VSAM.INDX))
//*
